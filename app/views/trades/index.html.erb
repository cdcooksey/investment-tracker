<p id="notice"><%= notice %></p>

<h1>Trades</h1>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Shares</th>
      <th>Amount</th>
      <th>Cost</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.ticker.name %></td>
        <td><%= trade.shares %></td>
        <td><%= number_to_currency(trade.amount) %></td>
        <td><%= number_to_currency(trade.shares * trade.amount) %></td>
        <td><%= trade.user.email %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
        <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

